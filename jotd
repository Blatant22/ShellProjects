#!/bin/bash

#----------------------------------------------------------------------------------
# Project Name      - miscellaneous/jotd (Joke of the Day)
# Started On        - Fri  2 Mar 13:27:44 GMT 2018
# Last Change       - Wed 17 Apr 11:49:25 BST 2019
# Author E-Mail     - terminalforlife@yahoo.com
# Author GitHub     - https://github.com/terminalforlife
#----------------------------------------------------------------------------------

_VERSION_="2019-04-17"

XERR(){ printf "[L%0.4d] ERROR: %s\n" "$1" "$2" 1>&2; exit 1; }
ERR(){ printf "[L%0.4d] ERROR: %s\n" "$1" "$2" 1>&2; }

DOM="http://www.laughfactory.com"

USAGE(){
	while read -r; do
		printf "%s\n" "$REPLY"
	done <<-EOF
		            JOTD - JOKE OF THE DAY ($_VERSION_)
		            Written by terminalforlife (terminalforlife@yahoo.com)

		            Display a Joke of the Day on your terminal.

		SYNTAX:     jotd [OPTS]

		OPTS:       --help|-h|-?            - Displays this help information.
		            --version|-v            - Output only the version datestamp.
		            --debug|-D              - Enables the built-in bash debugging.

		NOTE:       These jokes may or may not be tasteful!

		FILE:       Jokes are saved in:

		              /tmp/jotd_store.txt

		            This is to avoid contacting the server on each execution of jotd. When
		            the system is restarted, assuming /tmp is cleared, jotd will once again
		            contact the server and recreate the file with the current joke.

		SITE:       $DOM
	EOF
}

while [ "$1" ]; do
	case "$1" in
		--help|-h|-\?)
			USAGE; exit 0 ;;
		--version|-v)
			printf "%s\n" "$_VERSION_"
			exit 0 ;;
		--debug|-D)
			DEBUGME="true" ;;
		*)
			XERR "$LINENO" "Incorrect argument(s) specified." ;;
	esac
	shift
done

declare -i DEPCOUNT=0
for DEP in /usr/bin/{tee,wget,fold,tput}; {
	if ! [ -x "$DEP" ]; then
		ERR "$LINENO" "Dependency '$DEP' not met."
		DEPCOUNT+=1
	fi
}

[ $DEPCOUNT -eq 0 ] || exit 1

# Newer versions of wget by default request unwanted server-side compression.
read -a WGET_VER_LINE <<< "$(/usr/bin/wget --version)"
[ 0${WGET_VER_LINE[2]//[!0-9]} -ge 01192 ] && NOWARC="--no-warc-compression"

[ "$DEBUGME" == "true" ] && set -x

URL="$DOM/jokes/joke-of-the-day"
FILE="/tmp/jotd_store.txt"

MAIN(){
	declare -i C=1
	while read X; do
		if [[ "$X" =~ \<p\ id\=\"joke_[0-9]+\"\> ]]; then
			printf -v JID "%d" "${X//[!0-9]}"
			[[ "$JID" =~ ^[0-9]+$ ]] && C+=1
		elif [ $C -eq 2 ]; then
			for F in $X; {
				if [[ "$F" == *\<br\>* ]]; then
					printf "${F//<br>/$'\n'} "
				elif [[ "$F" == *\</p\>* ]]; then
					break
				else
					printf "%s " "$F"
				fi
			}

			printf "\n"
			break
		fi
	done <<< "$(/usr/bin/wget "$NOWARC" -q -t 1 "$URL" -O -)"\
		| /usr/bin/fold -s --width=${COL:-`/usr/bin/tput cols`}
}

if [ -z "$(MAIN)" ]; then
	XERR "$LINENO" "Null value. The site has probably changed."
elif ! [ -f "$FILE" ]; then
	MAIN | /usr/bin/tee "$FILE"
else
	MAIN
fi
