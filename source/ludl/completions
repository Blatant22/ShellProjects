#------------------------------------------------------------------------------
# This is the bash completion script for LUDL.
#------------------------------------------------------------------------------

_ludl() {
	local Option Args Arg

	while read; do
		[[ ${REPLY:0:2} == '  ' ]] || continue

		Option=${REPLY%% - *}
		for Arg in ${Option//,/}; {
			Args+="${Arg##[^-]*} "
		}
	done <<< "$(ludl -h)"

	if [[ $2 == -* ]]; then
		COMPREPLY=(`compgen -W "$Args" -- "$2"`)
	fi
}

complete -F _ludl -o default ludl
