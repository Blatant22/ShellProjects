#!/bin/bash

#----------------------------------------------------------------------------------
# Project Name      - Extra/purgerc
# Started On        - Fri 18 May 23:07:54 BST 2018
# Last Change       - Sun 27 Oct 23:18:28 GMT 2019
# Author E-Mail     - terminalforlife@yahoo.com
# Author GitHub     - https://github.com/terminalforlife
#----------------------------------------------------------------------------------

_VERSION_="2019-10-27"
_PROJECT_="${0##*/}"

FAIL(){
	printf "[L%0.4d] ERROR: %s\n" "$2" "$3" 1>&2
	[ $1 -eq 1 ] && exit 1
}

DOM="https://github.com"

USAGE(){
	while read -r; do
		printf "%s\n" "$REPLY"
	done <<-EOF
		            ${_PROJECT_^^} ($_VERSION_)
		            Written by terminalforlife (terminalforlife@yahoo.com)

		            Simple and lightweight shell command to remove 'rc' packages.

		SYNTAX:     $_PROJECT_ [OPTS]

		OPTS:       --help|-h|-?            - Displays this help information.
		            --version|-v            - Output only the version datestamp.
		            --quiet|-q              - Runs in quiet mode. Errors still output.
		            --update|-U             - Check for updates to $_PROJECT_.

		NOTE:       If executed without root permissions, simulation mode is used.

		SITE:       $DOM/terminalforlife/Extra
	EOF
}

while [ "$1" ]; do
	case "$1" in
		--help|-h|-\?)
			USAGE; exit 0 ;;
		--version|-v)
			printf "%s\n" "$_VERSION_"; exit 0 ;;
		--update|-U)
			UPDATE="true" ;;
		--quiet|-q)
			BEQUIET="true" ;;
		*)
			FAIL 1 "$LINENO" "Incorrect argument(s) specified." ;;
	esac
	shift
done

declare -i DEPCOUNT=0
for DEP in dpkg apt-get; {
	if ! type -fP "$DEP" > /dev/null 2>&1; then
		FAIL 0 "$LINENO" "Dependency '$DEP' not met."
		DEPCOUNT+=1
	fi
}

if [ "$UPDATE" == "true" ]; then
	if ! type -fP wget > /dev/null 2>&1; then
		FAIL 1 "$LINENO" "Dependency 'wget' not met."
	fi

	VERSION_URL="$DOM/terminalforlife/Extra/raw/master/versions"
	while IFS='=' read -a LINE; do
		if  [ "${LINE[0]}" == "$_PROJECT_" ]; then
			LATEST="${LINE[1]}"

			if [[ "${LATEST//-}" =~ ^[0-9]{8}$ ]]; then
				if [ ${LATEST//-} -gt ${_VERSION_//-} ]; then
					while read -r; do
						printf "%s\n" "$REPLY"
					done <<-EOF
						New version available:    $LATEST
						Current version:          $_VERSION_
					EOF
				fi
			else
				FAIL 1 "$LINENO" "Failed to check for available updates."
			fi
		fi
	done <<< "$(wget -q "$VERSION_URL" -O -)"

	exit 0
fi

[ $DEPCOUNT -eq 0 ] || exit 1

if ! [ $UID -eq 0 ]; then
	printf "Running in simulation mode.\n"
	SIM='-s -o APT::Get::Show-User-Simulation-Note=0'
fi

[ "$BEQUIET" == "true" ] && exec >&-

while read -a X; do
	[ "${X[0]}" == "rc" ] && LIST+=" ${X[1]}"
done <<< "$(dpkg -l)"

if [ "$LIST" ]; then
	apt-get -q $SIM -o Dpkg::Progress=true\
		-o Dpkg::Progress-Fancy=true -o APT::Get::AutomaticRemove=true\
		remove --purge $LIST
else
	printf "No 'rc' packages detected by APT.\n" 1>&2
	exit 1
fi
