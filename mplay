#!/bin/bash

#----------------------------------------------------------------------------------
# Project Name      - miscellaneous/mplay
# Started On        - Sat 16 Sep 19:42:57 BST 2017
# Last Change       - Mon 13 Nov 13:14:27 GMT 2017
# Author E-Mail     - terminalforlife@yahoo.com
# Author GitHub     - https://github.com/terminalforlife
#----------------------------------------------------------------------------------

# My mocp settings. Simple script to allow me to quickly load mocp how I like.

#----------------------------------------------------------------------------------

XERR(){ printf "[L%0.4d] ERROR: %s\n" "$1" "$2" 1>&2; exit 1; }
ERR(){ printf "[L%0.4d] ERROR: %s\n" "$1" "$2" 1>&2; }

[ $UID -eq 0 ] && XERR "$LINENO" "Root access is not required."
[ $# -eq 0 ] || XERR "$LINENO" "No arguments required."

MUSIC_DIR="$HOME/Music"
THEME_DIR="/usr/share/moc/themes"
COMMAND="/bin/bash $HOME/.i3a/track_notify"
CHOSEN_THEME="red_theme"
#CHOSEN_THEME="transparent-background"

[ -d $THEME_DIR ] || XERR "$LINENO" "Theme directory not found."
[ -f "$THEME_DIR/$CHOSEN_THEME" ] || XERR "$LINENO" "Theme file not found."

[ -x /usr/bin/mocp -a -x /sbin/alsa ] && {
	/usr/bin/mocp -T $THEME_DIR/$CHOSEN_THEME        \
		-O ShowFormat=yes                        \
		-O ShowTime=no                           \
		-O Shuffle=yes                           \
		-O HideFileExtension=yes                 \
		-O SavePlaylist=no                       \
		-O TagsCacheSize=3000                    \
		-O PlaylistNumbering=yes                 \
		-O Layout1="playlist(50%,50%,50%,50%)"   \
		-O FollowPlayedFile=yes                  \
		-O ModPlug_NoiseReduction=yes            \
		-O ModPlug_ResamplingMode=FIR            \
		-O OnSongChange="$COMMAND"               \
		-O CanStartInPlaylist=yes                \
		-O ResampleMethod=SincMediumQuality      \
		-O UseMimeMagic=no                       \
		-O ShowHiddenFiles=no                    \
		-O SoundDriver=ALSA                      \
		-O InputBuffer=512                       \
		-O OutputBuffer=512                      \
		-O Prebuffering=256                      \
		"$MUSIC_DIR"                             \
	|| XERR "$LINENO" "Unable to start the MOC player."
} || XERR "$LINENO" "Dependency '/usr/bin/mocp' and/or '/sbin/alsa' not met."
