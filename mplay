#My mocp (moc) settings. Simple script to allow me to quickly load mocp how I like.

# Load error functions.
ERR(){ echo "ERROR: $1" 1>&2; }
XERR(){ echo "ERROR: $1" 1>&2; exit 1; }

# Check for root access.
[ $UID -eq 0 ] && XERR "Root access is not required."

# Check for zero arguments.
[ $# -eq 0 ] || XERR "No arguments required."

# The directory where all the mocp themes are stored.
THEME_DIR="/usr/share/moc/themes"

# If the directory doesn't exist, as above, the error and exit.
[ -d $THEME_DIR ] || XERR "Theme directory not found."

# This is the selected theme which should be in the above directory.
CHOSEN_THEME="transparent-background"

# If the chosen theme doesn't exist as above, error and exit.
[ -f "$THEME_DIR/$CHOSEN_THEME" ] || XERR "Theme file not found."

 # If mocp and alsa are found, ...
if type -P /usr/bin/mocp /sbin/alsa &> /dev/null
then
	# Actually launch mocp, using the flags and above chosen theme.
	if ! /usr/bin/mocp -T $THEME_DIR/$CHOSEN_THEME   \
		-O ShowFormat=yes                        \
		-O ShowTime=no                           \
		-O Shuffle=yes                           \
		-O HideFileExtension=yes                 \
		-O SavePlaylist=no                       \
		-O TagsCacheSize=3000                    \
		-O PlaylistNumbering=yes                 \
		-O Layout1="playlist(50%,50%,50%,50%)"   \
		-O FollowPlayedFile=yes                  \
		-O ModPlug_NoiseReduction=yes            \
		-O ModPlug_ResamplingMode=FIR            \
		-O OnSongChange="notify-send '%t'"       \
		-O CanStartInPlaylist=yes                \
		-O ResampleMethod=SincMediumQuality      \
		-O UseMimeMagic=no                       \
		-O ShowHiddenFiles=no                    \
		-O SoundDriver=ALSA                      \
		-O InputBuffer=512                       \
		-O OutputBuffer=512                      \
		-O Prebuffering=256
	then
		# If MOC fails to launch, error and exit.
		XERR "Unable to start the MOC player."
	fi
else
	# If alsa and/or mocp aren't found, error and exit.
	XERR "Dependency '/usr/bin/mocp' unmet."
fi
